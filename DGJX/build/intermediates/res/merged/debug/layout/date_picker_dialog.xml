<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_2"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@id/date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_42"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_large"
        android:gravity="center"
        android:background="@drawable/upper_round_corner_bg"/>


    <DatePicker
        android:id="@id/date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/view_17"
        android:paddingTop="@dimen/view_13"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/view_33"
        android:paddingLeft="@dimen/view_33"
        android:paddingRight="@dimen/view_33"
        android:paddingStart="@dimen/view_33"
        android:background="@drawable/under_round_corner_bg">

        <Button
            android:id="@id/cancel"
            style="@style/ButtonWhite"
            android:layout_width="@dimen/view_0"
            android:layout_marginEnd="@dimen/view_16"
            android:layout_marginRight="@dimen/view_16"
            android:layout_weight="1"
            android:text="@string/cancel" />

        <Button
            android:id="@id/confirm"
            style="@style/ButtonBlue"
            android:layout_width="@dimen/view_0"
            android:layout_weight="1"
            android:text="@string/confirm" />
    </LinearLayout>

</LinearLayout>