<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical" >

    <include layout="@layout/inc_home_title" />

    <RadioGroup
        android:id="@id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_50"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/radio_group_padding"
        android:paddingRight="@dimen/radio_group_padding" >

        <RadioButton
            android:id="@id/booking_order"
            android:layout_height="match_parent"
            style="@style/radio_button"
            android:text="@string/booking_order" />

        <!--<RadioButton-->
            <!--android:id="@id/day_training"-->
            <!--style="@style/radio_button"-->
            <!--android:text="@string/day_training" />-->

        <RadioButton
            android:layout_height="match_parent"
            android:id="@id/training"
            style="@style/radio_button"
            android:text="@string/history_order" />
    </RadioGroup>

    <View style="@style/divider" />

    <android.support.v4.view.ViewPager
        android:id="@id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>