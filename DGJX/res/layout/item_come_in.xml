<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/view_15"
            android:layout_marginBottom="@dimen/view_15"
            android:gravity="center"
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="李小明"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_medium_xxx"
            />
        <TextView
            android:layout_marginTop="@dimen/view_15"
            android:layout_marginBottom="@dimen/view_15"
            android:gravity="center"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017年1月19日"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_medium_xxx"
            />
        <TextView
            android:layout_marginTop="@dimen/view_15"
            android:layout_marginBottom="@dimen/view_15"
            android:gravity="center"
            android:id="@+id/tv_subj"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="科目二"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_medium_xxx"
            />
        <TextView
            android:layout_marginTop="@dimen/view_15"
            android:layout_marginBottom="@dimen/view_15"
            android:layout_marginRight="@dimen/view_10"
            android:gravity="center"
            android:id="@+id/tv_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="150.00元"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_medium_xxx"
            />

    </LinearLayout>

</LinearLayout>