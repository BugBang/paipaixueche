<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/personal_top_bg"
        android:layout_height="@dimen/view_180">
        <ImageView
            android:id="@+id/iv_msg"
            android:padding="@dimen/view_10"
            android:layout_marginTop="@dimen/view_5"
            android:layout_marginLeft="@dimen/view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/top_msg"
            />
        <TextView
            android:id="@+id/tv_top"
            android:layout_marginTop="@dimen/view_44"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:text="本月总收入  (元)"
            />
        <TextView
            android:layout_below="@id/tv_top"
            android:id="@+id/tv_month_comein"
            android:layout_marginTop="@dimen/view_8"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:text="10000.00"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/view_8"
            android:gravity="center_horizontal"
            android:layout_below="@id/tv_month_comein"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_white"
                android:text="今日总收入 (元)"
                />
            <TextView
                android:id="@+id/tv_day_comein"
                android:layout_marginLeft="@dimen/view_10"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_white"
                android:text="250.00"
                android:textStyle="bold"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_30">
        <TextView
            android:id="@+id/tv_sunday"
            android:layout_marginLeft="@dimen/view_10"
            android:text="周日"
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/text_medium_x"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_monday"
            android:text="周一"
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/text_medium_x"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_tuesday"
            android:text="周二"
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/text_medium_x"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_wednesday"
            android:text="周三"
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/text_medium_x"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_thursday"
            android:text="周四"
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/text_medium_x"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_friday"
            android:text="周五"
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/text_medium_x"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_saturday"
            android:layout_marginRight="@dimen/view_10"
            android:text="周六"
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/text_medium_x"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_0.5"
        android:background="@color/text_gray"
        />
    <ListView
        android:id="@+id/lv_order_list"
        android:divider="@null"
        android:dividerHeight="@dimen/view_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </ListView>

</LinearLayout>