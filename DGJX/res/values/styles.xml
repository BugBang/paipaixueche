<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppFullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="DialogBase" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    
    <style name="date_pick_dialog" parent="android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    
    
    <style name="ButtonBlue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_medium</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textSize">@dimen/text_btn</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
    <style name="ButtonRed">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_medium</item>
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:textSize">@dimen/text_btn</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
    
    <style name="ButtonWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_medium</item>
        <item name="android:background">@drawable/btn_white_1</item>
        <item name="android:textSize">@dimen/text_btn</item>
        <item name="android:textColor">@drawable/text_blue_selector</item>
    </style>
    
    <style name="radio_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/radio_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/radio_text_color</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- 我的预约 -->
    <style name="order_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="order_item_tv_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_888888</item>
        <item name="android:textSize">@dimen/text_medium_x</item>
    </style>
    <style name="order_item_tv_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">@dimen/text_medium_x</item>
    </style>
  
    
    <!-- 约教练 -->
	<style name="star">
	    <item name="android:layout_width">@dimen/view_10</item>
	    <item name="android:layout_height">@dimen/view_10</item>
	    <item name="android:contentDescription">@null</item>
	</style>
	
	<!-- 预约学车 -->
	<style name="order_activity_layout_1">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:minHeight">@dimen/about_menu_height</item>
	    <item name="android:orientation">horizontal</item>
	    <item name="android:paddingTop">@dimen/view_8</item>
	    <item name="android:paddingBottom">@dimen/view_8</item>
	    <item name="android:paddingLeft">@dimen/view_13</item>
	    <item name="android:paddingRight">@dimen/view_13</item>
	    <item name="android:divider">@drawable/divider_4</item>
	    <item name="android:showDividers">middle</item>
	</style>
	
	<style name="order_activity_tv_1">
	    <item name="android:layout_width">@dimen/view_60</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:gravity">right|center_horizontal</item>
	    <item name="android:textColor">@color/gray_888888</item>
	    <item name="android:textSize">@dimen/text_medium_x</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
	<style name="order_activity_tv_2">
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:textColor">@color/black_333333</item>
	    <item name="android:textSize">@dimen/text_medium_xx</item>
	</style>
	
	<!-- 约教练 -->
	<style name="star_2">
	    <item name="android:layout_width">@dimen/view_20</item>
	    <item name="android:layout_height">@dimen/view_20</item>
	    <item name="android:contentDescription">@null</item>
	</style>
	
	
	<style name="rating_bar" parent="@android:style/Widget.RatingBar">
	    <item name="android:layout_width" >wrap_content</item>
	    <item name="android:layout_height" >wrap_content</item>
	    <item name="android:numStars" >5</item>
	    <item name="android:stepSize" >1</item>
	    <item name="android:progressDrawable" >@drawable/rating_bar</item>
	    <item name="android:minHeight" >@dimen/rating_bar_height_big</item>
	    <item name="android:maxHeight" >@dimen/rating_bar_height_big</item>
	</style>
	<style name="rating_bar_small" parent="@android:style/Widget.RatingBar">
	    <item name="android:layout_width" >wrap_content</item>
	    <item name="android:layout_height" >wrap_content</item>
	    <item name="android:numStars" >5</item>
	    <item name="android:stepSize" >0.1</item>
	    <item name="android:progressDrawable" >@drawable/rating_bar_small</item>
	    <item name="android:minHeight" >@dimen/rating_bar_height_small</item>
	    <item name="android:maxHeight" >@dimen/rating_bar_height_small</item>
	</style>
	
	<style name="divider">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">1px</item>
	    <item name="android:background">@color/divider</item>
	</style>
	
	<style name="GridPasswordView" />
	
	<style name="GridPasswordView.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GridPasswordView.EditText" parent="GridPasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>
    
    <style name="GridPasswordView.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>
    
    <style name="no_data_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium_xxx</item>
        <item name="android:textColor">@color/gray_888888</item>
        <item name="android:text">@string/no_data</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
