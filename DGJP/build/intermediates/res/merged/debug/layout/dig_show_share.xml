<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/wechat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_5"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/view_5"
            android:scaleType="center"
            android:src="@drawable/ssdk_oks_classic_wechat"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信好友"
            android:textColor="@color/text_gray2"
            android:textSize="@dimen/text_medium_xx"
            />

    </LinearLayout>


    <View
        android:layout_width="@dimen/view_0.5"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        />

    <LinearLayout
        android:id="@+id/wechatmoments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_5"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/view_5"
            android:scaleType="center"
            android:src="@drawable/ssdk_oks_classic_wechatmoments"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信朋友圈"
            android:textColor="@color/text_gray2"
            android:textSize="@dimen/text_medium_xx"
            />
    </LinearLayout>

    <View
        android:layout_width="@dimen/view_0.5"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        />

    <LinearLayout
        android:id="@+id/qq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_5"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/view_5"
            android:scaleType="center"
            android:src="@drawable/ssdk_oks_classic_qq"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textColor="@color/text_gray2"
            android:textSize="@dimen/text_medium_xx"
            />
    </LinearLayout>

    <View
        android:layout_width="@dimen/view_0.5"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        />

    <LinearLayout
        android:id="@+id/weibo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_5"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/view_5"
            android:scaleType="center"
            android:src="@drawable/ssdk_oks_classic_sinaweibo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新浪微博"
            android:textColor="@color/text_gray2"
            android:textSize="@dimen/text_medium_xx"
            />
    </LinearLayout>
</LinearLayout>