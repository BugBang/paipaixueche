<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/app_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/title_height"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/iv_back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="推荐有奖"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_title"/>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/title_height"
            android:layout_weight="1"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_200"
                android:scaleType="centerCrop"
                android:src="@drawable/share_top_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_25"
                android:text="亲,成功推荐好友报名可获赏金喔~"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/text_large_x"
                />
            <TextView
                android:id="@+id/tv_tuijian1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_15"
                android:text="亲,成功推荐好友报名可获赏金喔~"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/text_large_x"
                />
            <TextView
                android:id="@+id/tv_tuijian2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_15"
                android:text="亲,成功推荐好友报名可获赏金喔~"
                android:textColor="@color/gray_normal"
                android:textSize="@dimen/text_large_x"
                />
            <Button
                android:id="@+id/bt_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_60"
                android:layout_marginLeft="@dimen/view_40"
                android:layout_marginRight="@dimen/view_40"
                android:layout_marginTop="@dimen/view_20"
                android:background="@drawable/btn_red_o5"
                android:text="分享邀请"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large_xxxx"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_30"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/view_0"
                    android:layout_height="@dimen/view_0.5"
                    android:layout_weight="1"
                    android:background="@color/gray_A3A3A3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/view_5"
                    android:layout_marginRight="@dimen/view_5"
                    android:text="活动规则"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_medium_xxx"
                    />

                <View
                    android:layout_width="@dimen/view_0"
                    android:layout_height="@dimen/view_0.5"
                    android:layout_weight="1"
                    android:background="@color/gray_A3A3A3"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/view_20"
                android:paddingRight="@dimen/view_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_15"
                    android:text="@string/share_rule_1"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_medium_x"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_8"
                    android:text="@string/share_rule_2"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_medium_x"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_8"
                    android:text="@string/share_rule_3"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_medium_x"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_8"
                    android:text="@string/share_rule_4"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_medium_x"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_40"/>
        </LinearLayout>
        

    </ScrollView>
</LinearLayout>