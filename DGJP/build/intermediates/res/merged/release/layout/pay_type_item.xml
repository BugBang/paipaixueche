<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_39"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/icon"
        style="@style/order_payment_iv_1"/>

    <TextView
        android:id="@id/_name"
        style="@style/order_payment_tv_2"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/view_9"
        android:layout_marginStart="@dimen/view_9"
        android:layout_weight="1"
        />

    <CheckBox
        android:id="@id/check_box"
        android:layout_width="@dimen/view_21"
        android:layout_height="@dimen/view_21"
        android:layout_marginEnd="@dimen/view_8"
        android:layout_marginRight="@dimen/view_8"
        android:background="@drawable/check_box_bg"
        android:button="@null"
        android:clickable="false"
        android:focusable="false" />

</LinearLayout>