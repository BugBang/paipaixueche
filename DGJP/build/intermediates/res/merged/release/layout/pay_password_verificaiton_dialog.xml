<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:passwordview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg_2"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_42"
        android:background="@drawable/upper_round_corner_bg"
        >
    <ImageView
        android:id="@id/back"
        android:layout_width="@dimen/view_42"
        android:layout_height="@dimen/view_42"
        android:src="@drawable/btn_back2"
        android:scaleType="center"
        android:contentDescription="@null"
        android:layout_centerVertical="true"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/text_medium_xxx"
        android:layout_centerInParent="true"
        android:text="@string/payment_verification"
        />
        
    </RelativeLayout>
    
    <TextView
        android:id="@id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_18"
        android:textSize="@dimen/text_medium_xxx" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_6"
        android:textSize="@dimen/text_medium_xxx"
        android:textColor="@color/gray_888888"
        android:text="@string/please_input_pay_password"
        />

        
    <com.jungly.gridpasswordview.GridPasswordView
        android:id="@id/password"
        android:layout_width="@dimen/view_234"
        android:layout_height="@dimen/view_32"
        android:layout_marginBottom="@dimen/view_26"
        android:layout_marginEnd="@dimen/view_21"
        android:layout_marginLeft="@dimen/view_21"
        android:layout_marginRight="@dimen/view_21"
        android:layout_marginStart="@dimen/view_21"
        android:layout_marginTop="@dimen/view_19"
        android:gravity="center"
        passwordview:gpvGridColor="@android:color/white"
        passwordview:gpvLineColor="@color/gray_D2D2D2"
        passwordview:gpvLineWidth="@dimen/view_1"
        passwordview:gpvPasswordLength="6"
        passwordview:gpvPasswordType="numberPassword"
        passwordview:gpvTextColor="@android:color/black"
        passwordview:gpvTextSize="@dimen/password_text" />

</LinearLayout>