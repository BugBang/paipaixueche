<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppFullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="DialogBase" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    
    <style name="FullScreenDialg">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
    </style>
    
    <style name="ButtonBlue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_medium</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textSize">@dimen/text_btn</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonOrange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_medium</item>
        <item name="android:background">@drawable/btn_orange</item>
        <item name="android:textSize">@dimen/text_btn</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonRed">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_medium</item>
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:textSize">@dimen/text_btn</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="ButtonWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_medium</item>
        <item name="android:background">@drawable/btn_white_1</item>
        <item name="android:textSize">@dimen/text_btn</item>
        <item name="android:textColor">@drawable/text_blue_selector</item>
    </style>
    
    <style name="radio_button">
