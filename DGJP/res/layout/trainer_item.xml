<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/view_13"
        android:paddingLeft="@dimen/view_21"
        android:paddingStart="@dimen/view_21"
        android:paddingRight="@dimen/view_17"
        android:paddingEnd="@dimen/view_17"
        android:paddingTop="@dimen/view_13">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@id/ivHead"
                android:layout_width="@dimen/view_50"
                android:layout_height="@dimen/view_50"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RatingBar
                    android:id="@id/rating_bar"
                    style="@style/rating_bar_small"
                    android:isIndicator="true" />

                <TextView
                    android:id="@id/eval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/view_1"
                    android:layout_marginStart="@dimen/view_1"
                    android:textColor="@color/yellow_FEB53F"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pager_paddding"
            android:layout_marginStart="@dimen/pager_paddding"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@id/trainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/text_medium_xx" />

            <TextView
                android:id="@id/school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_7_5"
                android:textColor="@color/gray_888888"
                android:textSize="@dimen/text_medium_x" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_6_5"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_times"
                    android:textColor="@color/gray_888888"
                	android:textSize="@dimen/text_medium_x" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colon"
                    android:textColor="@color/gray_888888"
                	android:textSize="@dimen/text_medium_x" />

                <TextView
                    android:id="@id/times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/view_5"
                    android:layout_marginStart="@dimen/view_5"
                    android:textColor="@color/pure_red"
                    android:textSize="@dimen/text_medium_x" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order"
                    android:textColor="@color/gray_888888"
                	android:textSize="@dimen/text_medium_x" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@id/operation"
            android:layout_width="@dimen/view_48"
            android:layout_height="@dimen/view_25"
            android:background="@drawable/btn_white"
            android:gravity="center"
            android:text="@string/book"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_12_5"/>
            
    </LinearLayout>

    <ImageView
        android:id="@id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_6"
        android:layout_marginLeft="@dimen/view_6"
        android:visibility="invisible"
        android:contentDescription="@null"
        />
    
</FrameLayout>