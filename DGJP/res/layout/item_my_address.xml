<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/view_12"
        android:layout_marginLeft="@dimen/view_20"
        android:layout_marginRight="@dimen/view_20"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/view_25">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingBottom="@dimen/view_2"
                android:id="@+id/iv_address_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/address_home"
                />
            <TextView
                android:layout_toRightOf="@id/iv_address_type"
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_address_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家里"
                android:layout_marginLeft="@dimen/view_8"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/text_large"
                />
            <ImageView
                android:paddingBottom="@dimen/view_2"
                android:layout_toRightOf="@id/tv_address_type"
                android:layout_alignParentBottom="true"
                android:id="@+id/iv_now_select"
                android:layout_marginLeft="@dimen/view_10"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/address_now_select"
                />
        </RelativeLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/view_0.5"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13684556666"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_large"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/view_10"
        android:layout_marginLeft="@dimen/view_20"
        android:layout_marginRight="@dimen/view_20"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:layout_gravity="bottom"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_large"
            />
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/view_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_0.5"
        android:background="@color/gray_bg"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/view_10"
        android:layout_marginLeft="@dimen/view_20"
        android:layout_marginRight="@dimen/view_20"
        android:layout_marginBottom="@dimen/view_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_default_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_address_select"
            />
        <TextView
            android:id="@+id/tv_default_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认地址"
            android:layout_marginLeft="@dimen/view_5"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_large"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/view_0.5"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loca_icon"
            />
        <TextView
            android:id="@+id/tv_to_location"
            android:layout_marginLeft="@dimen/view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_large"
            />
        <ImageView
            android:layout_marginLeft="@dimen/view_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/address_editor"
            />
        <TextView
            android:id="@+id/tv_editor"
            android:layout_marginLeft="@dimen/view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_large"
            />
        <ImageView
            android:layout_marginLeft="@dimen/view_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/address_delete"
            />
        <TextView
            android:id="@+id/tv_delete"
            android:layout_marginLeft="@dimen/view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_large"
            />
    </LinearLayout>
</LinearLayout>