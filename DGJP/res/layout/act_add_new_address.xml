<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_bg"
              android:orientation="vertical">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/app_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="0dp"
                android:layout_height="@dimen/title_height"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/iv_back"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="新增地址"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_title"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/title_height"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="@dimen/view_48">
            <TextView
                android:layout_marginLeft="@dimen/view_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/text_large"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_type"
                android:layout_marginRight="@dimen/view_15"
                android:layout_width="50dp"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/text_large"
                android:textColor="@color/black_333333"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/add_gray_small"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_0.5"
            android:background="@color/gray_bg"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="@dimen/view_48">
            <TextView
                android:layout_marginLeft="@dimen/view_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/text_large"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/et_phone"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_large"
                android:inputType="number"
                android:textColor="@color/black_333333"
                android:hint="请输入联系电话"
                android:layout_marginRight="@dimen/view_15"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_0.5"
            android:background="@color/gray_bg"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="@dimen/view_48">
            <TextView
                android:layout_marginLeft="@dimen/view_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地区"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/text_large"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_location"
                android:gravity="center"
                android:layout_marginRight="@dimen/view_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="请选择"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_large"
                android:drawablePadding="@dimen/view_15"
                android:drawableRight="@drawable/arr_gray_right"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_0.5"
            android:background="@color/gray_bg"
            />
        <EditText
            android:id="@+id/et_detail_address"
            android:background="@null"
            android:paddingLeft="@dimen/view_15"
            android:paddingTop="@dimen/view_15"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_large"
            android:textColor="@color/black_333333"
            android:layout_height="@dimen/view_120"
            android:hint="请填写详细地址,如街道、楼牌号等"
            android:gravity="top"
            />
    </LinearLayout>

    <Button
        android:id="@+id/bt_save_address"
        android:layout_marginTop="@dimen/view_20"
        android:layout_marginRight="@dimen/view_15"
        android:layout_marginLeft="@dimen/view_15"
        android:text="保存地址"
        android:textColor="@color/white"
        android:textSize="@dimen/text_large_xx"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_50"
        android:background="@drawable/btn_red"
        />
</LinearLayout>