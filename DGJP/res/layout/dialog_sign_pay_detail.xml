<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="@dimen/view_25"
              android:paddingRight="@dimen/view_25">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/view_20"
        android:paddingTop="@dimen/view_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款明细"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_large"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计 : "
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_large"
            />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textColor="@color/red_ff4848"
            android:textSize="@dimen/text_large"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_0.5"
        android:background="@color/gray_bg"
        />

    <LinearLayout
        android:id="@+id/ll_test_total"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/view_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考试费 ( 东莞财政 )"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_medium_x"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_test_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textColor="@color/red_ff4848"
            android:textSize="@dimen/text_medium_x"
            />
        <ImageView
            android:id="@+id/iv_arr_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_8"
            android:background="@drawable/arr_down"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_test_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingRight="@dimen/view_15"
                android:paddingTop="@dimen/view_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科目一费用 :"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_medium_x"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_fee_test1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载中"
                    android:textColor="@color/red_ff4848"
                    android:textSize="@dimen/text_medium_x"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/view_15"
                android:paddingTop="@dimen/view_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科目二费用 :"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_medium_x"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_fee_test2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载中"
                    android:textColor="@color/red_ff4848"
                    android:textSize="@dimen/text_medium_x"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingRight="@dimen/view_15"
                android:paddingTop="@dimen/view_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科目三路考 :"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_medium_x"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_fee_test3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载中"
                    android:textColor="@color/red_ff4848"
                    android:textSize="@dimen/text_medium_x"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/view_15"
                android:paddingTop="@dimen/view_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件工本费 :"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_medium_x"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_fee_papers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载中"
                    android:textColor="@color/red_ff4848"
                    android:textSize="@dimen/text_medium_x"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/view_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场地管理费"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_medium_xx"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_space_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textColor="@color/red_ff4848"
            android:textSize="@dimen/text_medium_xx"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/view_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学习资料及代办手续费"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_medium_xx"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_data_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textColor="@color/red_ff4848"
            android:textSize="@dimen/text_medium_xx"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_0.5"
        android:layout_marginTop="@dimen/view_15"
        android:background="@color/gray_bg"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_15"
        android:text="备注 : 以下费用根据个人实际情况选择缴纳"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_medium_x"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_35"
        android:layout_marginTop="@dimen/view_5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体检费"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_medium_xx"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_marginRight="@dimen/view_6"
            android:id="@+id/tv_fee_physical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textColor="@color/red_ff4848"
            android:textSize="@dimen/text_medium_xx"
            />

        <CheckBox
            android:id="@+id/iv_physical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@drawable/check_box_bg2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_35"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="居住证"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_medium_xx"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_marginRight="@dimen/view_6"
            android:id="@+id/tv_fee_residence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textColor="@color/red_ff4848"
            android:textSize="@dimen/text_medium_xx"
            />

        <CheckBox
            android:id="@+id/iv_residence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@drawable/check_box_bg2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_35"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="驾驶证一寸数码照"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_medium_xx"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_marginRight="@dimen/view_6"
            android:id="@+id/tv_fee_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textColor="@color/red_ff4848"
            android:textSize="@dimen/text_medium_xx"
            />

        <CheckBox
            android:id="@+id/iv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@drawable/check_box_bg2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_35"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="居住证数码照"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_medium_xx"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_marginRight="@dimen/view_6"
            android:id="@+id/tv_residence_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textColor="@color/red_ff4848"
            android:textSize="@dimen/text_medium_xx"
            />

        <CheckBox
            android:id="@+id/iv_residence_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@drawable/check_box_bg2"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_0.5"
        android:background="@color/gray_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_44"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/red_ff4848"
            android:textSize="@dimen/text_large_x"/>
    </LinearLayout>

</LinearLayout>