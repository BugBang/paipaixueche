<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/app_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/title_height"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/iv_back"/>

        <TextView
            android:id="@id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="填写个人信息"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_title"/>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/title_height"
            android:layout_weight="1"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_20"
                android:layout_marginTop="@dimen/view_10"
                android:text="个人信息"
                android:textColor="@color/text_gray2"
                android:textSize="@dimen/text_medium_xx"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_10"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_50"
                    android:layout_marginLeft="@dimen/view_20"
                    android:layout_marginRight="@dimen/view_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人姓名"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/text_medium_xxx"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请输入您的姓名"
                        android:textColor="@color/text_red"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/text_medium_xxx"
                        />
                </LinearLayout>

                <View
                    style="@style/divider2"
                    android:layout_marginLeft="@dimen/view_20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_50"
                    android:layout_marginLeft="@dimen/view_20"
                    android:layout_marginRight="@dimen/view_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="户口"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/text_medium_xxx"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/et_account"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请输入户口所在地"
                        android:textColor="@color/text_red"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/text_medium_xxx"
                        />
                </LinearLayout>

                <View
                    style="@style/divider2"
                    android:layout_marginLeft="@dimen/view_20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_50"
                    android:layout_marginLeft="@dimen/view_20"
                    android:layout_marginRight="@dimen/view_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/text_medium_xxx"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/et_id_card"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black_333333"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/text_medium_xxx"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <View
                    style="@style/divider2"
                    android:layout_marginLeft="@dimen/view_20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_50"
                    android:layout_marginLeft="@dimen/view_20"
                    android:layout_marginRight="@dimen/view_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QQ"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/text_medium_xxx"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/et_qq_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请输入您的QQ号码"
                        android:inputType="number"
                        android:textColor="@color/text_red"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/text_medium_xxx"
                        />
                </LinearLayout>

                <View
                    style="@style/divider2"
                    android:layout_marginLeft="@dimen/view_20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_50"
                    android:layout_marginLeft="@dimen/view_20"
                    android:layout_marginRight="@dimen/view_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/text_medium_xxx"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请输入您的邮箱"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text_red"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/text_medium_xxx"
                        />
                </LinearLayout>

                <View
                    style="@style/divider2"
                    android:layout_marginLeft="@dimen/view_20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_50"
                    android:layout_marginLeft="@dimen/view_20"
                    android:layout_marginRight="@dimen/view_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/text_medium_xxx"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/et_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black_333333"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/text_medium_xxx"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <View
                    style="@style/divider2"
                    android:layout_marginLeft="@dimen/view_20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_50"
                    android:layout_marginLeft="@dimen/view_20"
                    android:layout_marginRight="@dimen/view_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/text_medium_xxx"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请输入您的地址"
                        android:textColor="@color/text_red"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/text_medium_xxx"
                        />
                </LinearLayout>

                <View
                    style="@style/divider2"
                    android:layout_marginLeft="@dimen/view_20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_50"
                    android:layout_marginLeft="@dimen/view_20"
                    android:layout_marginRight="@dimen/view_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证正面照片"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/text_medium_xxx"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/iv_card_front"
                        android:layout_width="@dimen/view_44"
                        android:layout_height="@dimen/view_44"
                        android:src="@drawable/add_image"
                        />
                </LinearLayout>

                <View
                    style="@style/divider2"
                    android:layout_marginLeft="@dimen/view_20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_50"
                    android:layout_marginLeft="@dimen/view_20"
                    android:layout_marginRight="@dimen/view_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证反面照片"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/text_medium_xxx"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/iv_card_back"
                        android:layout_width="@dimen/view_44"
                        android:layout_height="@dimen/view_44"
                        android:src="@drawable/add_image"
                        />
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/bt_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_50"
                android:layout_marginTop="@dimen/view_80"
                android:background="@color/app_color"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
