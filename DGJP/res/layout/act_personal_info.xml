<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical" >

    <include layout="@layout/inc_common_title" />

    <View
        style="@style/divider"
        android:layout_marginTop="@dimen/pager_paddding"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@id/llPersonInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/pager_paddding" >

        <ImageView
            android:id="@id/ivHead"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            android:src="@drawable/img_def_head" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pager_paddding"
            android:layout_marginStart="@dimen/pager_paddding"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_medium_xxx" />

            <TextView
                android:id="@id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_5"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/text_medium_xxx" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/divider"
        android:visibility="invisible" />

    <View
        style="@style/divider"
        android:layout_marginTop="@dimen/pager_paddding"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="@dimen/about_menu_height"
        android:orientation="vertical"
        android:padding="@dimen/pager_paddding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/about_person_info_height"
                android:text="@string/id"
                android:textColor="@color/text_about_version"
                android:textSize="@dimen/text_large" />

            <EditText
                android:id="@id/etId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="text"
                android:minHeight="@dimen/about_person_info_height"
                android:singleLine="true"
                android:textColor="@color/text_id_blue"
                android:textSize="@dimen/text_large" />

            <ImageView
                android:id="@id/ivShowId"
                android:layout_width="@dimen/about_person_info_height"
                android:layout_height="@dimen/about_person_info_height"
                android:contentDescription="@null"
                android:src="@drawable/btn_show_id" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/about_person_info_height"
                android:text="@string/address"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/text_medium_xxx" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/about_person_info_height"
                android:textColor="@color/gray_666666"
                android:textSize="@dimen/text_medium_xxx" />
        </LinearLayout>

        <View style="@style/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/about_person_info_height"
                android:text="@string/school_registration"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/text_medium_xxx" />

            <TextView
                android:id="@+id/tvSchool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/about_person_info_height"
                android:textColor="@color/gray_666666"
                android:textSize="@dimen/text_medium_xxx" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/about_person_info_height"
                android:text="@string/time_registration"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/text_medium_xxx" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/about_person_info_height"
                android:textColor="@color/gray_666666"
                android:textSize="@dimen/text_medium_xxx" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/about_person_info_height"
                android:text="@string/balance"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/text_medium_xxx" />

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/about_person_info_height"
                android:textColor="@color/red"
                android:textSize="@dimen/text_medium_xxx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/about_person_info_height"
                android:text="@string/yuan"
                android:textColor="@color/gray_666666"
                android:textSize="@dimen/text_medium_xxx" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/divider"
        android:visibility="invisible" />

</LinearLayout>