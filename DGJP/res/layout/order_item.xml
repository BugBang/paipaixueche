<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="vertical"
    android:paddingBottom="@dimen/view_13"
    android:paddingEnd="@dimen/view_19"
    android:paddingLeft="@dimen/view_13"
    android:paddingRight="@dimen/view_19"
    android:paddingStart="@dimen/view_13"
    android:paddingTop="@dimen/view_13" 
    >

    <!-- 预约培训时间 -->

    <LinearLayout style="@style/order_item_layout" >

        <TextView
            style="@style/order_item_tv_1"
            android:text="@string/time" />

        <TextView
            style="@style/order_item_tv_1"
            android:text="@string/colon" />

        <TextView
            android:id="@id/time"
            style="@style/order_item_tv_2" />
    </LinearLayout>

    <LinearLayout style="@style/order_item_layout"
        android:layout_marginTop="@dimen/view_7_5"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:divider="@drawable/divider_7"
            android:orientation="vertical"
            android:showDividers="middle" >

            <!-- 培训课程 -->

            <LinearLayout style="@style/order_item_layout" >

                <TextView
                    style="@style/order_item_tv_1"
                    android:text="@string/course" />

                <TextView
                    style="@style/order_item_tv_1"
                    android:text="@string/colon" />

                <TextView
                    android:id="@id/course"
                    style="@style/order_item_tv_2" />
            </LinearLayout>

            <!-- 预约教练 -->

            <LinearLayout style="@style/order_item_layout" >

                <TextView
                    style="@style/order_item_tv_1"
                    android:text="@string/trainer" />

                <TextView
                    style="@style/order_item_tv_1"
                    android:text="@string/colon" />

                <TextView
                    android:id="@id/trainer"
                    style="@style/order_item_tv_2" />
            </LinearLayout>
            <!-- 状态 -->

            <LinearLayout style="@style/order_item_layout" >

                <TextView
                    style="@style/order_item_tv_1"
                    android:text="@string/status" />

                <TextView
                    style="@style/order_item_tv_1"
                    android:text="@string/colon" />

                <TextView
                    android:id="@id/status"
                    style="@style/order_item_tv_2" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@id/operation"
            android:layout_width="@dimen/view_65"
            android:layout_height="@dimen/view_25"
            android:layout_gravity="top"
            android:gravity="center"
            android:layout_marginTop="@dimen/view_10"
            android:textSize="@dimen/text_12_5"
            android:textColor="@color/red_ff4848"
            android:background="@drawable/btn_white"/>
    </LinearLayout>

</LinearLayout>