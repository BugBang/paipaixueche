	}
	 private void initView() {
	        tbsContent = (com.tencent.smtt.sdk.WebView)findViewById(R.id.wv);
	        tbsContent.loadUrl("file:///android_asset/fl/index.html");
	        com.tencent.smtt.sdk.WebSettings webSettings = tbsContent.getSettings();
	        webSettings.setJavaScriptEnabled(true);
//	        tbsContent.setWebViewClient(new WebViewClient() {
